---
import Button from "./Button.astro"
---

<div id="contact">
    <div class="flex flex-col items-center justify-center mt-40 mb-20">
      <form
        action="mailto:enrique.diaz@a.vedrunasevillasj.es"
        method="get"
        class="w-3/5 h-3/5 mt-2"
      >
        <fieldset class="p-4">

          <div class="flex flex-col mt-1">
            <input
              type="text"
              class={`border rounded-sm p-2 text-info bg-color2 placeholder:font-poppins placeholder:italic placeholder-color5`}
              name="inputName"
              placeholder="Nombre*"
              required
            />
          </div>

          <div class="flex flex-col mt-1">
            <input
              type="email"
              class={`border rounded-sm p-2 text-info bg-color2 placeholder:font-poppins placeholder:italic placeholder-color5`}
              name="inputEmail"
              placeholder="Email*"
              required
            />
          </div>

          <div class="flex flex-col mt-2">
            <textarea
              class={`border rounded-sm p-2 text-info bg-color2 placeholder:font-poppins placeholder:italic placeholder-color5`}
              name="message"
              rows="5"
              placeholder="Mensaje*"
              required
            ></textarea>
          </div>

          <div class="flex mt-2">
            <Button
                label="Enviar mensaje"
                type="submit"
                styleClass="w-full"
                />
          </div>
        </fieldset>
    </form>
    </div>