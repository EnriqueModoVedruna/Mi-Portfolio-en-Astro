---
const { foto, nombre, descripcion, oficio, sombra, enlace } = Astro.props
---

<div id="referencias">
    <div class="flex flex-row mx-10 items-start gap-6 py-4">
      
      <!-- InformaciÃ³n -->
      <div class="flex flex-col gap-2">
        <h1 class="text-xl font-poppins italic font-bold text-color6">{nombre}</h1>
        <p class="text-base">{oficio}</p>
        <p class="text-sm text-gray-500 font-poppins">{descripcion}</p>
        <a class="text-blue-500" href={enlace}>{sombra}</a>

      </div>

      <!-- Imagen -->
      <img 
        src={foto} 
        alt="Foto" 
        class="w-28 h-28"
      />
    </div>
  </div>